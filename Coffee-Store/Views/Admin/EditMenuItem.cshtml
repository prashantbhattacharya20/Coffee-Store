@model Menu

<section class="edit-menu-item" id="edit-menu-item">
    <h1 class="heading"><span>Edit Menu Item</span></h1>

    <form method="post" class="edit-menu-item-form">

        <input asp-for="ItemID" type="hidden" />

        <div class="form-field">
            <label for="itemName">Item Name</label>
            <input asp-for="ItemName" type="text" id="itemName" required/>
        </div>

        <div class="form-field">
            <label for="description">Description</label>
            <input asp-for="Description" type="text" id="description" required/>
        </div>

        <div class="form-field">
            <label for="price">Price</label>
            <input asp-for="Price" type="number" id="price" required/>
        </div>

        <div class="form-field">
            <label for="url">Image URL</label>
            <input asp-for="Url" type="text" id="url" required/>
        </div>

        <div class="form-actions">
            <button  type="submit" class="edit-menu-item-btn">Submit</button>
            <a asp-controller="Admin" asp-action="Admin" class="go-back-button">Back</a>
        </div>
    </form>
</section>